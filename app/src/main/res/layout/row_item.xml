<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/row_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/row_item_iv_pic"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:text="John Doe" />

    <TextView
        android:id="@+id/row_item_tv_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/row_item_iv_pic"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="25dp"
        android:text="Manager" />

    <ImageView
        android:id="@+id/row_item_iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/user_silhouette" />
</RelativeLayout>