<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/guestlist_row_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/guestlist_row_item_cb"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:text="John Doe" />

    <TextView
        android:id="@+id/guestlist_row_item_tv_addedby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/guestlist_row_item_tv_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="75dp"
        android:text="Added by: MJ" />

    <TextView
        android:id="@+id/guestlist_row_item_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guestlist_row_item_tv_name"
        android:layout_alignLeft="@id/guestlist_row_item_tv_name"
        android:layout_marginBottom="5dp"
        android:text="Guests: 4" />

    <CheckBox
        android:id="@+id/guestlist_row_item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"/>

</RelativeLayout>