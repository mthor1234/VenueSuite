<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/colorBackground">



    <ImageView
        android:id="@+id/fragment_guest_view_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_silhouette"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="45dp"/>

    <TextView
        android:id="@+id/fragment_guest_view_tv_guestname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@id/fragment_guest_view_img"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:text="TESTING"/>

    <!--<TextView-->
        <!--android:id="@+id/fragment_guest_view_tv_guestname"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="23sp"-->
        <!--app:layout_constraintTop_toBottomOf="fragment_guest_view_img"-->
        <!--app:layout_constraintLeft_toRightOf="parent"-->
        <!--app:layout_constraintRight_toLeftOf="parent"/>-->

    <TextView
        android:id="@+id/fragment_guest_view_tv_addedby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@id/fragment_guest_view_tv_guestname"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:text="TESTING"/>

    <TextView
        android:id="@+id/fragment_guest_view_tv_partysize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@id/fragment_guest_view_tv_addedby"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:text="TESTING"/>

    <TextView
        android:id="@+id/fragment_guest_view_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@id/fragment_guest_view_tv_partysize"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:text="TESTING"/>


    <TextView
        android:id="@+id/fragment_guest_view_tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@id/fragment_guest_view_tv_phone"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:text="TESTING" />

</android.support.constraint.ConstraintLayout>