<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/colorBackground">


    <TextView
        android:id="@+id/fragment_security_tv_doorcount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Count:"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="65dp"/>


    <TextView
        android:id="@+id/fragment_security_tv_doorcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="225"
        android:textSize="65dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_security_tv_doorcount_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/fragment_security_imgbtn_down"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/arrow_down"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_security_tv_doorcount" />

    <ImageButton
        android:id="@+id/fragment_security_imgbtn_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/arrow_up"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="55dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_security_tv_doorcount" />


    <TextView
        android:id="@+id/fragment_security_tv_doorone_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door 1 Count:"
        app:layout_constraintTop_toBottomOf="@id/fragment_security_imgbtn_down"
        app:layout_constraintStart_toStartOf="@id/fragment_security_imgbtn_down"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/fragment_security_tv_doorone_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        app:layout_constraintTop_toTopOf="@id/fragment_security_tv_doorone_count_label"
        app:layout_constraintBottom_toBottomOf="@id/fragment_security_tv_doorone_count_label"
        app:layout_constraintLeft_toRightOf="@id/fragment_security_tv_doorone_count_label"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/fragment_security_tv_doortwo_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door 2 Count:"
        app:layout_constraintTop_toBottomOf="@id/fragment_security_tv_doorone_count_label"
        app:layout_constraintStart_toStartOf="@id/fragment_security_tv_doorone_count_label"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/fragment_security_tv_doortwo_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        app:layout_constraintTop_toTopOf="@id/fragment_security_tv_doortwo_count_label"
        app:layout_constraintBottom_toBottomOf="@id/fragment_security_tv_doortwo_count_label"
        app:layout_constraintLeft_toRightOf="@id/fragment_security_tv_doortwo_count_label"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/fragment_security_tv_doorthree_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door 3 Count:"
        app:layout_constraintTop_toBottomOf="@id/fragment_security_tv_doortwo_count_label"
        app:layout_constraintStart_toStartOf="@id/fragment_security_tv_doortwo_count_label"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/fragment_security_tv_doorthree_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        app:layout_constraintTop_toTopOf="@id/fragment_security_tv_doorthree_count_label"
        app:layout_constraintBottom_toBottomOf="@id/fragment_security_tv_doorthree_count_label"
        app:layout_constraintLeft_toRightOf="@id/fragment_security_tv_doorthree_count_label"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/fragment_security_tv_total_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Count: "
        app:layout_constraintTop_toBottomOf="@id/fragment_security_tv_doorthree_count_label"
        app:layout_constraintStart_toStartOf="@id/fragment_security_tv_doorthree_count_label"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="35sp"/>

    <TextView
        android:id="@+id/fragment_security_tv_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/fragment_security_tv_total_count_label"
        app:layout_constraintBottom_toBottomOf="@id/fragment_security_tv_total_count_label"
        app:layout_constraintLeft_toRightOf="@id/fragment_security_tv_total_count_label"
        android:textSize="35sp"/>

</android.support.constraint.ConstraintLayout>